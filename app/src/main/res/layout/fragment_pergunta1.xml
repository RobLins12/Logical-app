<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="30dp"
    tools:context=".quiz.Pergunta1Fragment">



    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:text="Suponha que as proposições P: Maria estuda matemática e Q: Pedro estuda física sejam verdadeiras. Qual é o valor lógico da conjunção P ∧ Q?"

        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_marginStart="20dp"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:onClick="opcaoA"
        android:textSize="20sp"
        android:text="Falso"
         />

    <Button
        android:id="@+id/button7"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:onClick="opcaoB"
        android:textSize="20sp"
        android:text="Verdadeiro"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:layout_editor_absoluteX="56dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="300dp"
        android:layout_marginStart="20dp"
        android:layout_height="80dp"
        android:layout_marginTop="400dp"
        android:textSize="20sp"
        android:onClick="opcaoC"
        android:text="Indeterminado"
        tools:layout_editor_absoluteX="56dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:onClick="opcaoD"
        android:text="Não é possível determinar"
        android:layout_marginTop="500dp"

        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintVertical_bias="0.301" />

</FrameLayout>